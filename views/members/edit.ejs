<% include ../partials/header %>


<div class="container">
    <br>
    <h1>Edit Member</h1>
    <br>
    <form action="" method="POST">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Member Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectName" name="name" value="<%- member.fullname %>"
                    readonly>
            </div>
        </div>
        <br>

        <div class="form-group row">

            <div class="col-sm-2">Position</div>



            <div class="col-sm-10">
                <select class="form-control" name="position">
                    <% positions.forEach((item)=> { %>
                    <option value="<%= item %>"<%= item == member.role ? ' selected' : '' %>><%= item %></option>
                    <%});%>
                </select>
            </div>
        </div>

        <button class="btn btn-success" type="submit">Save</button>
        <a href="/projects" class="btn btn-warning">Cancel</a>
    </form>
</div>
</body>

</html>