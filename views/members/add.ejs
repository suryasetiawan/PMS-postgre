<% include ../partials/header %>

<div class="container-fluid">
  <div class="row">
    <% include ../partials/sidemenu %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
      <h1><strong>Add Member</strong></h1>
    </div>
    <form action="" method="POST">
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Member Name</label>
        <div class="col-sm-10">
          <select class="form-control" name="user">
            <% users.forEach((item)=> { %>
            <option value="<%= item.userid %>"><%= item.fullname %></option>
            <%});%>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">Position</div>
        <div class="col-sm-10">
          <select class="form-control" name="position">
            <% positions.forEach((item)=> { %>
            <option value="<%= item %>"><%= item %></option>
            <%});%>
          </select>
        </div>
      </div>

      <button class="btn btn-outline-success" type="submit">Save</button>
      <a href="/projects/members/<%= projectid %>" class="btn btn-outline-warning">Cancel</a>
    </form>
    </main>
  </div>
</div>
</div>
</body>

</html>